<div class="contact-div">
  <div class="contact-form">
    <h1>Contact</h1>
    <%= form_with model: @contact, url: contacts_path, local: true do |f| %>
      <%= csrf_meta_tags %>

      <label for="name">Nom</label><br>
      <%= f.text_field :name, required: true %><br>

      <label for="email">Email</label><br>
      <%= f.email_field :email, required: true %><br>

      <label for="message">Message</label><br>
      <%= f.text_area :message, required: true %><br>

      <%= f.submit "Envoyer", class: "contact-form-button" %>
    <% end %>
  </div>
</div>
