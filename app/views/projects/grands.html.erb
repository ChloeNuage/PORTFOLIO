<!-- JavaScript -->
 <script>
  document.addEventListener('DOMContentLoaded', function () {
    // Récupérer l'image principale et toutes les miniatures
    const mainImage = document.getElementById('mainImage');
    const thumbnails = document.querySelectorAll('.thumbnail');

    // Fonction pour mettre à jour l'image principale et les miniatures
    function changeMainImage(thumbnail) {
      // Met à jour la source de l'image principale
      mainImage.src = thumbnail.src;

      // Supprime la classe "selected" des autres miniatures
      thumbnails.forEach(thumb => thumb.classList.remove('selected'));

      // Ajoute la classe "selected" à la miniature cliquée
      thumbnail.classList.add('selected');
    }

    // Ajouter des écouteurs sur les miniatures
    thumbnails.forEach(thumbnail => {
      thumbnail.addEventListener('click', function () {
        changeMainImage(this);
      });
    });

    // Initialiser la première miniature comme sélectionnée
    thumbnails[0].classList.add('selected');
  });
</script>
